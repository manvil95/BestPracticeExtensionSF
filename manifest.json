{
    "name":"Best Practice",
    "description":"Extension for managing metadata nomenclatures in project.",
    "version": "2.0",
    "manifest_version": 3,
    "author": "Manuel Vill√©n",
    "action":{
        "default_title": "Best Practice",
        "default_icon": "icons/icon.png"
    },
    "background": {
        "service_worker": "service.js"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "html/*",
                "styles.css",
                "js/*",
                "fonts/NotoSans-Regular.ttf"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "host_permissions": ["https://*/*","http://*/*"]
}